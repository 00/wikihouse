<!DOCTYPE HTML>
<html>
  <%def name="sub_title()"></%def>
  <%def name="sub_headers()"></%def>
  <%def name="main_content()"></%def>
  <%def name="actions()"></%def>
  <%def name="content()">
    <div class="slot-0-1-2-3">
      ${self.main_content()}
    </div>
    <div class="slot-4-5">
      ${self.actions()}
    </div>
  </%def>
  <head>
    <title>
      WikiHouse / ${self.sub_title()}
    </title>
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7; IE=EmulateIE9" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="WikiHouse is the open source community construction standard defined by Architecture 00:/ for building collaboratively designed modular houses." />
    <meta name="keywords" content="wikihouse, wiki, house, design, build, open, open source, community, standard, constrction, building, architecture, housing, CNC, CNC milling, wooden frame." />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="${get_static_url('css/reset.css')}" />
    <!--[if lt IE 9 ]>
      <link rel="stylesheet" type="text/css"
          href="${get_static_url('css/simplegrid/720_grid.css')}"
      />
    <![endif]-->
    <link rel="stylesheet" type="text/css" media="screen and (min-width: 720px)"
        href="${get_static_url('css/simplegrid/720_grid.css')}"
    />
    <link rel="stylesheet" type="text/css" media="screen and (min-width: 986px)"
        href="${get_static_url('css/simplegrid/986_grid.css')}" 
    />
    <link rel="stylesheet" type="text/css" media="screen and (min-width: 1236px)"
        href="${get_static_url('css/simplegrid/986_grid.css')}" 
    />
    <link rel="stylesheet" type="text/css" 
        href="${get_static_url('css/wikihouse.css')}"
    />
    <%def name="sub_headers()"></%def>
    <base href="${request.host_url}" />
    <script type="text/javascript" src="http://use.typekit.com/boe7lhx.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>
  <body>
    <div class="wrapper">
      <div class="grid no-padding border-sides">
        <div class="row">
            <div class="slot-0-1-2-3-4-5 border-bottom border-right">
               <ul class="top-nav">
                  <li class="left no-border">
                    <a href="" title="">
                      English / Korean</a>
                  </li>
                  % if users.get_current_user() is None:
                    <a href="${users.create_login_url(request.path)}" title="Login">
                      <li class="right border-left unselected">
                      Login
                      </li>
                    </a>
                  % else:
                    % if users.is_current_user_admin():
                      <a href="/moderate" title="Moderate">
                        <li class="right border-left unselected">
                          Moderate
                        </li>
                      </a>
                    % endif
                    <a href="${users.create_logout_url(request.path)}" title="Logout">
                        <li class="right border-left unselected">
                            Logout
                        </li>
                    </a>
                  % endif
                  <%
                    secondary_nav_items = [{
                            'value': '/contact',
                            'label': u'Contact'
                        }, {
                            'value': '/support',
                            'label': u'Get Involved'
                        }
                    ]
                  %>
                  % for item in secondary_nav_items:
                    <%
                      value = item['value']
                      label = item['label']
                      selected = request.path.startswith(value)
                    %>
                    <a href="${value}" title="${label}">
                        <li class="${selected and ' selected' or ' unselected'} right border-left">
                        ${label}
                        </li>
                    </a>
                  % endfor
                  <a href="http://wikihouse.tumblr.com/" target="blank" title="Goto the WikiHouse Tumblog">
                      <li class="external right border-left unselected">
                          News
                      </li>
                  </a>
                </ul>
            </div>
        </div>
        <div class="row padding-sides">
          <div class="slot-0">
            <a class="wh-logo-img" target="blank" href="http://www.wikihouse.cc">[ WIKI HOUSE LOGO ]</a>
          </div>
        </div>
        <div class="row padding-sides">
          <div class="slot-0-1">
            <div id="wh-logo-text">
              <div>
                <a class="wh-logo-text" target="blank" href="http://www.wikihouse.cc">[ WIKI HOUSE LOGO TEXT ]</a>
              </div>
              <div>
                <a class="wh-logo-cc" target="blank" href="http://creativecommons.org/licenses/by-sa/2.5/">[ WIKI HOUSE LOGO CC ]</a>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="slot-0-1-2-3-4-5">
            <div class="row">
              <div class="slot-0-1-2-3-4-5 border-bottom padding-top">
                <ul class="main-nav">
                  <%
                    nav_items = [{
                            'value': '/',
                            'label': u'About',
                            'slot': u'slot-0'
                        }, {
                            'value': '/standard',
                            'label': u'How it Works',
                            'slot': u'slot-1'
                        }, {
                            'value': '/library',
                            'label': u'Browse the Library',
                            'slot': u'slot-2'
                        }, {
                            'value': '/download',
                            'label': u'Download the Plugin',
                            'slot': u'slot-3'
                        }, {
                            'value': '/guide',
                            'label': u'Guide for Designers',
                            'slot': u'slot-4'
                        }, {
                            'value': '/community',
                            'label': u'Community',
                            'slot': u'slot-5'
                        }
                    ]
                  %>
                  % for item in nav_items:
                    <%
                      value = item['value']
                      label = item['label']
                      slot = item['slot']
                      if value == '/':
                          selected = request.path == '/'
                      else:
                          selected = request.path.startswith(value)
                      
                    %>
                    <a href="${value}" title="${label}">
                        <li class="${slot}${selected and ' selected' or ' unselected'} padding-top-bottom">
                        ${label}
                        </li>
                    </a>
                  % endfor
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="row padding-all">
          ${self.content()}
        </div>
        <div class="row padding-all border-top">
            <div class="slot-0-1-2">
                Powered by:
            </div>
            <div class="slot-3-4-5 social-links right">
                <span class="st_twitter_hcount" displayText="Tweet"></span>
                <span class="st_facebook_hcount" displayText="Facebook"></span>
                <span class="st_fblike_hcount"></span>
                <span class="st_plusone_hcount"></span>
            </div>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js">
    </script>
    <script type="text/javascript" src="//s3.amazonaws.com/getsatisfaction.com/javascripts/feedback-v2.js">
    </script>
    <script type="text/javascript">
      (function () {
        var switchTo5x = true;
        var using_ssl = document.location.protocol == 'https:';
        var stub = using_ssl ? 'https://ws' : 'http://w';
        var src = stub + '.sharethis.com/button/buttons.js';
        var tag = '%3Cscript src="' + src + '" type="text/javascript"%3E%3C/script%3E';
        document.write(unescape(tag));
      })();
    </script>
    <script type="text/javascript">
      stLight.options({'publisher': '386e0e7b-fee7-485d-af13-172a5107f9fb'});
    </script>
    <script type="text/javascript" src="${get_static_url('js/wikihouse.js')}">
    </script>
  </body>
</html>