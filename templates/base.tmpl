<!DOCTYPE HTML>
<html>
  <%def name="sub_title()"></%def>
  <%def name="sub_headers()"></%def>
  <%def name="main_content()"></%def>
  <%def name="actions()"></%def>
  <%def name="content()">
    <div>
      ${self.main_content()}
    </div>
    <div>
      ${self.actions()}
    </div>
  </%def>
  <head>
    <title>
      WikiHouse / ${self.sub_title()}
    </title>
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7; IE=EmulateIE9" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="${_(u'WikiHouse is an open community construction set.  Design, share, download and print CNC milled houses and components.')}" />
    <meta name="keywords" content="wikihouse, ${_(u'wiki')}, ${_(u'house')}, ${_(u'design')}, ${_(u'build')}, ${_(u'open')}, ${_(u'open source')}, ${_(u'community')}, ${_(u'standard')}, ${_(u'construction')}, ${_(u'building')}, ${_(u'architecture')}, ${_(u'housing')}, CNC, CNC milling, ${_(u'wooden')}, ${_(u'plywood')}, 00:/, zero zero, espians." />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="${get_static_url('css/reset.css')}" />
    <!--[if lt IE 9 ]>
      <link rel="stylesheet" type="text/css"
          href="${get_static_url('css/simplegrid/720_grid.css')}"
      />
    <![endif]-->
    <link rel="stylesheet" type="text/css" media="screen and (min-width: 720px)"
        href="${get_static_url('css/simplegrid/720_grid.css')}"
    />
    <link rel="stylesheet" type="text/css" media="screen and (min-width: 986px)"
        href="${get_static_url('css/simplegrid/986_grid.css')}" 
    />
    <link rel="stylesheet" type="text/css" media="screen and (min-width: 1236px)"
        href="${get_static_url('css/simplegrid/1236_grid.css')}" 
    />
    <link rel="stylesheet" type="text/css" 
        href="${get_static_url('css/wikihouse.css')}"
    />
    <%def name="sub_headers()"></%def>
    <base href="${request.host_url}" />
  </head>
  <body>
    <div class="wrapper padding-top">
      <div class="grid no-padding border-sides">
        <div class="row">
            <div class="slot-0-1-2-3-4-5 border-bottom border-right">
               <ul class="top-nav">
                  <li class="left no-border">
                  </li>
                  % if users.get_current_user() is None:
                    <a href="${users.create_login_url(request.path)}">
                      <li class="right border-left unselected">
                        ${_(u'Login')}
                      </li>
                    </a>
                  % else:
                    % if users.is_current_user_admin():
                      <a href="/moderate">
                        <li class="right border-left unselected">
                          ${_(u'Moderate')}
                        </li>
                      </a>
                    % endif
                    <a href="${users.create_logout_url(request.path)}">
                        <li class="right border-left unselected">
                          ${_(u'Logout')}
                        </li>
                    </a>
                  % endif
                  <%
                    secondary_nav_items = [{
                            'value': '/contact',
                            'label': _(u'Contact')
                        }, {
                            'value': '/donate',
                            'label': _(u'Donate')
                        }, {
                            'value': '/collaborate',
                            'label': _(u'Collaborate')
                        }
                    ]
                  %>
                  % for item in secondary_nav_items:
                    <%
                      value = item['value']
                      label = item['label']
                      selected = request.path.startswith(value)
                    %>
                    <a href="${value}" title="${label}">
                      <li class="${selected and 'selected' or 'unselected'} right border-left">
                        ${label}
                      </li>
                    </a>
                  % endfor
                  <a href="http://wikihouse.tumblr.com/" target="blank" title="${_(u'Goto the WikiHouse Tumblog')}">
                    <li class="external right border-left unselected">
                      ${_(u'News')}
                    </li>
                  </a>
                </ul>
            </div>
        </div>
        <div class="row">
          <div class="slot-0-1-2-3-4-5 padding-sides">
            <a class="wh-logo-img" href="/">[ WIKI HOUSE LOGO ]</a>
          </div>
        </div>
        <div class="row">
          <div class="slot-0-1-2-3-4-5 padding-sides">
            <div id="wh-logo-text">
              <div>
                <a class="wh-logo-text" href="/">[ WIKI HOUSE LOGO TEXT ]</a>
              </div>
              <div>
                <a class="wh-logo-cc" target="blank" href="http://creativecommons.org/licenses/by-sa/2.5/">[ WIKI HOUSE LOGO CC ]</a>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="slot-0-1-2-3-4-5 border-bottom padding-top">
            <ul class="main-nav">
              <%
                nav_items = [{
                        'value': '/',
                        'label': _(u'Home')
                    }, {
                        'value': '/about',
                        'label': _(u'How it Works')
                    }, {
                        'value': '/guide',
                        'label': _(u'Guide for Designers')
                    }, {
                        'value': '/library',
                        'label': _(u'Browse Library')
                    }, {
                        'value': '/download',
                        'label': _(u'Download Plugin')
                    }
                ]
              %>
              % for item in nav_items:
                <%
                  value = item['value']
                  label = item['label']
                  if value == '/':
                      selected = request.path == '/'
                  else:
                      selected = request.path.startswith(value)

                %>
                <li class="${selected and 'selected' or ''}">
                  <a href="${value}">${label}</a>
                </li>
              % endfor
            </ul>
          </div>
        </div>
        <div class="row">
          ${self.content()}
        </div>
        <div class="row border-top padding-top-bottom-small padding-sides-small">
          <div class="slot-6">
            <div class="left padding-top-small">
              <a class="link strong" target="blank" href="/terms" alt="Terms and Conditions">Terms of Use...</a>
            </div>  
          </div>
          <div class="slot-7-8-9">
            <div class="social-links right">
              <span class="st_email_custom right padding-left-small"><a class="email-logo">Email</a></span>
              <span class="st_plusone_custom right padding-left-small"><a class="google-logo">Google Plus One</a></span>
              <span class="st_twitter_custom right padding-left-small"><a class="twitter-logo">Tweet</a></span>
              <span class="st_facebook_custom right padding-left-small"><a class="fb-logo">Facebook</a></span>
            </div>
          </div>
        </div>
        <div class="row border-top">
          <div id="credits" class="padding-left-mid">  
            <div class="left">
              <span class="small">Powered by:</span>
            </div>
            <div class="left">
              <a class="logo-00" target="blank" href="http://www.architecture00.net" alt="00:/">[ 00:/ ]</a>
            </div>
            <div class="left">
              <a class="logo-esp" target="blank" href="http://www.espians.com" alt="Espians">[ ESPIANS ]</a>
            </div>
            </div>
            <div class="right">
              <div class="border-left padding-sides padding-top-small right">
              <a class="logo-gw" target="blank" href="http://gb.or.kr/?mid=main_eng" alt="Gwangju Design Biennale 2011">[Gwangju Design Biennale 2011]</a>
              </div>
            </div>
          </div>
        </div>
    </div>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js">
    </script>
    <script type="text/javascript" src="//s3.amazonaws.com/getsatisfaction.com/javascripts/feedback-v2.js">
    </script>
    <script type="text/javascript">
      (function () {
        var switchTo5x = true;
        var using_ssl = document.location.protocol == 'https:';
        var stub = using_ssl ? 'https://ws' : 'http://w';
        var src = stub + '.sharethis.com/button/buttons.js';
        var tag = '%3Cscript src="' + src + '" type="text/javascript"%3E%3C/script%3E';
        document.write(unescape(tag));
      })();
    </script>
    <script type="text/javascript">
      stLight.options({'publisher': '386e0e7b-fee7-485d-af13-172a5107f9fb'});
    </script>
    <script type="text/javascript" src="/i18n/message_strings.json">
    </script>
    <script type="text/javascript" src="${get_static_url('js/wikihouse.js')}">
    </script>
  </body>
</html>