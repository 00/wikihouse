<%inherit file="base.tmpl"/>

<%def name="sub_title()">${_(u'Open Source Construction Set')}</%def>

<%def name="content()">
  <div class="super-graphic row">
    <div id="splash-container">
      <a href="#play-video" id="play-video">
        <div class="splash-text-container">
          <div class="splash-text">
            An Open Source Construction Set.
          </div>
        </div>
        <div class="splash-image-container">
          <img src="${get_static_url('gfx/wikihouse-mac.jpg')}" />
        </div>
      </a>
    </div>
    <div id="fitvid-container"></div>
  </div>
  <div class="row padding-top-bottom border-bottom quotes">
    <ul class="quotes-widget padding-top-bottom">
      % for item in quotes:
        <li>
          <div class="row">
            <div class="quote-image padding-sides-large">
            % if item.href: 
            <a href="${item.href}" target="_blank">
              <img src="${get_static_url('gfx/logos/%s.png' % item.key().name())}" />
            </a>
            % else:
              <img src="${get_static_url('gfx/logos/%s.png' % item.key().name())}" />
            % endif
            </div>
            <div class="quote-content">
              "${_(item.content)}"
            </div>
            <div class="quote-name">
              % if item.name:   
                  ${item.name}
              % endif
            </div>
          </div>
        </li>
      % endfor
    </ul>
  </div>
  <div class="row border-bottom" style="clear: top; background-color: #bdbdbd">
    <a href="http://wikihouserio.cc">
      <div class="slot-0-1-2-3 rio-image-container">
        <img src="${get_static_url('gfx/wikihouse-rio.png')}" />
      </div>
      <div class="slot-4-5">
        <div id="tagline">
          <h1>WikiHouse /RIO</h1>
          <p>
            An open-source maker lab in the heart of the favela
          </p>
        </div>
      </div>
    </a>
  </div>
  <div class="row overflow-hidden avatars">
    <div class="">
      <a href="/community" title="${_(u'WikiHouse Community')}">
        <ul class="right avatars-widget inner-shadow">
          % for item in avatars:
            <li class="right home-avatar">
              <img src="${item}" />
            </li>
          % endfor
        </ul>
      </a>
      <div class="clear">
      </div>
    </div>
  </div>
</%def>
