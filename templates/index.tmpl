<%inherit file="base.tmpl"/>

<%def name="sub_title()">${_(u'Open community construction set')}</%def>

<%def name="content()">
  <div class="super-graphic row">
    <div class="super-graphic-image">
      <img src="${get_static_url('gfx/super-graphic.png')}" />
    </div>
    <div class="super-graphic-copy">
      <h1>${_(u'Open Source Construction')}</h1>
      <p>
        ${_(u'WikiHouse is an open community construction set.  Design, share, download and print CNC milled houses and components.')}
      </p>
      <a href="/about" title="${_(u'Find out how WikiHouse works')}">
        <div class="how-it-works-button">
          ${_(u"Here's how it works")}
        </div>
      </a>
    </div>
  </div>
  <div class="row">
    <ul class="quotes-widget">
      % for item in quotes:
        <li>
          <div class="quote-image">
            <img src="${get_static_url('gfx/logos/%s.png' % item.key().name())}" />
          </div>
          <div class="quote-content">
            ${item.content}
          </div>
          <div class="quote-name">
            ${item.name}
          </div>
        </li>
      % endfor
    </ul>
  </div>
  <div class="row">
    <ul class="avatars-widget">
      % for item in users_with_avatars:
        <li>
          <a href="/library/users/${item.id}" title="${item.nickname}">
            <img src="${item.avatar}" /></a>
        </li>
      % endfor
    </ul>
  </div>
</%def>
