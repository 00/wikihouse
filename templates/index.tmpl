<%inherit file="base.tmpl"/>

<%def name="sub_title()">${_(u'Open Source Construction Set')}</%def>

<%def name="content()">
  <div class="super-graphic row">
    <div class="slot-0-1-2-3">
      <div class="fitvid-container">
        <iframe src="//player.vimeo.com/video/52383144?title=0&amp;byline=0&amp;portrait=0&amp;color=ffffff&amp;"
            width="500" height="281" 
            frameborder="0" 
            webkitAllowFullScreen 
            mozallowfullscreen 
            allowFullScreen>
        </iframe>
        <!--div class="super-graphic-container">
          <a href="/about" title="${_(u'Find out how WikiHouse works')}">
            <img src="${get_static_url('gfx/super-graphic.png')}" />
          </a>
        </div-->
      </div>
    </div>
    <div class="slot-4-5">
      <div class="super-graphic-copy">
        <!--div class="super-graphic-link">
          <a class="how-it-works" href="/about" title="${_(u'Find out how WikiHouse works')}">
          </a>
        </div-->
        <div class="right call-to-action">
          <h1>${_(u'Open Source Construction Set.')}</h1>
          <p>
            <h2>
              <a href="/about">
                Find out how it works &raquo;</a>
            </h2>
            <h2>
              <a href="/community">
                Join the community &raquo;</a>
            </h2>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row padding-top-bottom border-bottom quotes">
    <ul class="quotes-widget padding-top-bottom" style="display:none;">
      % for item in quotes:
        <li>
          <div class="row">
            <div class="quote-image left padding-sides-large">
            % if item.href: 
            <a href="${item.href}" target="_blank">
              <img src="${get_static_url('gfx/logos/%s.png' % item.key().name())}" />
            </a>
            % else:
              <img src="${get_static_url('gfx/logos/%s.png' % item.key().name())}" />
            % endif
            </div>
            <div class="quote-content left">
              "${_(item.content)}"
            </div>
            <div class="quote-name">
              % if item.name:   
                  ${item.name}
              % endif
            </div>
          </div>
        </li>
      % endfor
    </ul>
  </div>
  <div class="row overflow-hidden avatars">
    <div class="">
      <a href="/community" title="${_(u'WikiHouse Community')}">
        <ul class="right avatars-widget inner-shadow">
          % for item in avatars:
            <li class="right home-avatar">
              <img src="${item}" />
            </li>
          % endfor
        </ul>
      </a>
      <div class="clear">
      </div>
    </div>
  </div>
</%def>
