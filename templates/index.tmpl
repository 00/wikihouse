<%inherit file="base.tmpl"/>

<%def name="sub_title()">${_(u'Open Source Construction Set')}</%def>

<%def name="content()">
  <div class="super-graphic row border-bottom">
    <div class="super-graphic-image slot-6-7-8">
      <a href="/about" title="${_(u'Find out how WikiHouse works')}">
        <img src="${get_static_url('gfx/super-graphic.png')}" />
      </a>
    </div>
    <div class="super-graphic-copy slot-9">
      <div class="super-graphic-link">
        <a class="how-it-works" href="/about" title="${_(u'Find out how WikiHouse works')}">
          <!--<h4>${_(u"How it works...")}</h4>-->
        </a>
      </div>
      <div class="right call-to-action">
        <h1>${_(u'Open Source Construction Set.')}</h1>
      </div>
    </div>
  </div>
  <div class="row padding-top-bottom border-bottom quotes">
    <ul class="quotes-widget padding-top-bottom" style="display:none;">
      % for item in quotes:
        <li>
          <div class="row">
            <div class="quote-image left padding-sides-large">
            % if item.href: 
            <a href="${item.href}" target="_blank">
              <img src="${get_static_url('gfx/logos/%s.png' % item.key().name())}" />
            </a>
            % else:
              <img src="${get_static_url('gfx/logos/%s.png' % item.key().name())}" />
            % endif
            </div>
            <div class="quote-content left">
              "${item.content}"
            </div>
            <div class="quote-name">
              % if item.name:   
                  ${item.name}
              % endif
            </div>
          </div>
        </li>
      % endfor
    </ul>
  </div>
  <div class="row overflow-hidden avatars">
    <ul class="avatars-widget">
      <li>
       <div class="inner-shadow">
         <img class="vignette" src="${get_static_url('gfx/avatars-widget.png')}">
       </div>
      </li>
      % for item in users_with_avatars:
        <li class="left home-avatar">
          <a href="/library/user/${item.id}" title="${item.nickname}">
            <img src="${item.avatar}" /></a>
        </li>
      % endfor
    </ul>
  </div>
</%def>
